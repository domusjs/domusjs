{
  "name": "domusjs",
  "version": "0.1.0",
  "author": "Sergio Salcedo",
  "license": "MIT",
  "description": "A minimal, scalable framework for building real-world backend systems with TypeScript, CQRS, and Clean Architecture.",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vssalcedo/domusjs"
  },
  "scripts": {
    "build": "tsc -b",
    "clean": "pnpm -r run clean",
    "build:prod": "pnpm clean && pnpm install && pnpm build --force",
    "dev": "pnpm -r run dev",
    "lint": "pnpm -r run lint",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-unused-imports": "^4.1.4",
    "lefthook": "^1.11.11",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsup": "^7.2.0",
    "tsyringe": "^4.9.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/express": "^5.0.1",
    "express": "^5.1.0"
  }
}
